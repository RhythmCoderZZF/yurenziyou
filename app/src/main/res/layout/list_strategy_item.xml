<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlyt_strategy_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.nbhysj.coupon.view.RoundedImageView
        android:id="@+id/image_strategy"
        android:layout_width="125dp"
        android:layout_height="89dp"
        app:riv_mutate_background="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_8"
        android:scaleType="fitXY"
        app:riv_corner_radius="5dip"
        app:riv_oval="false" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toRightOf="@+id/image_strategy"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_strategy_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:lines="3"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_xnormal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_strategy_praise_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_toLeftOf="@+id/tv_strategy_collection_num"
            android:drawableLeft="@mipmap/icon_strategy_praise"
            android:drawablePadding="@dimen/dp_4"
            android:layout_below="@+id/tv_strategy_name"
            android:layout_marginTop="@dimen/dp_12"
            android:text="0"
            android:textColor="@color/color_text_gray27"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_strategy_collection_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:drawableLeft="@mipmap/icon_strategy_collection"
            android:drawablePadding="@dimen/dp_4"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/tv_strategy_name"
            android:layout_marginTop="@dimen/dp_12"
            android:text="0"
            android:layout_marginBottom="@dimen/dp_13"
            android:textColor="@color/color_text_gray27"
            android:textSize="12sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/color_text_gray6"
            android:layout_marginTop="@dimen/dp_13"
            android:layout_alignParentBottom="true"
            android:alpha="0.25"></View>
    </RelativeLayout>


</RelativeLayout>
