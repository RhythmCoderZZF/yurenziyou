<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/dp_24"
        android:orientation="vertical">

    <ImageView
        android:id="@+id/img_coupon_des_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_25"
        android:gravity="center"
        android:src="@mipmap/icon_coupon_use_explain"
    />

        <ImageView
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center"
            android:src="@mipmap/icon_coupon_use_explain_vertical_line"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="412dp"
        android:background="@drawable/bg_oprate_confirm"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="优惠券使用说明"
            android:textColor="@color/txt_font_black2"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_35"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_medium" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_23"
            android:layout_marginRight="@dimen/dp_23"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginBottom="@dimen/dp_52"
            android:scrollbars="none">

        <TextView
            android:id="@+id/tv_coupon_intro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_normal" />

        </ScrollView>
    </LinearLayout>

</LinearLayout>