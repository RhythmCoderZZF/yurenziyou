<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    android:id="@+id/rlyt_strategy_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/image_strategy"
        android:layout_width="135dp"
        android:layout_height="105dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/llyt_strategy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_toRightOf="@+id/image_strategy"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_strategy_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:text=""
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_xnormal"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_strategy_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:layout_marginRight="@dimen/dp_15"
            android:ellipsize="end"
            android:lines="3"
            android:text=""
            android:textColor="@color/color_text_gray20"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

</RelativeLayout>
