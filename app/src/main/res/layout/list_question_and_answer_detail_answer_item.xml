<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_ask_question_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/llyt_answerer_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_answer_user_avatar"
                android:layout_width="@dimen/dp_41"
                android:layout_height="@dimen/dp_41"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_13" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_17"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_answerer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.66"
                        android:text="某某某"
                        android:textColor="@color/color_text_blue12"
                        android:textSize="@dimen/text_size_normal" />

                    <TextView
                        android:id="@+id/tv_have_bought"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.66"
                        android:background="@drawable/bg_stroke_radius_two_green_shape"
                        android:text="@string/str_have_bought"
                        android:paddingLeft="@dimen/dp_6"
                        android:paddingRight="@dimen/dp_6"
                        android:paddingBottom="@dimen/dp_3"
                        android:paddingTop="@dimen/dp_3"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/color_green3"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_answer_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:alpha="0.66"
                    android:text="2019-03-20"
                    android:textColor="@color/color_text_gray27"
                    android:textSize="@dimen/text_size_normal" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_answer_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llyt_answerer_info"
            android:layout_marginLeft="@dimen/dp_65"
            android:layout_marginTop="@dimen/dp_18"
            android:text="隔音好，睡觉不会被影响！"
            android:textColor="@color/color_text_gray27"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_question_adopt"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@+id/tv_answer_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_toLeftOf="@+id/tv_question_useful"
            android:background="@drawable/bg_stroke_radius_ten_gray_shape"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_18"
            android:paddingRight="@dimen/dp_18"
            android:text="@string/str_adopt"
            android:textColor="@color/color_text_gray27"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_question_useful"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_20"
            android:layout_below="@+id/tv_answer_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/bg_stroke_radius_ten_blue_shape"
            android:drawableLeft="@mipmap/icon_blue_answer_useful"
            android:drawablePadding="@dimen/dp_4"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:text="@string/str_useful"
            android:textColor="@color/color_text_blue10"
            android:textSize="@dimen/text_size_small" />

        <ImageView
            android:id="@+id/img_adopted_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_18"
            android:src="@mipmap/icon_question_adopted" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_70"
        android:alpha="0.25"
        android:background="@color/color_text_gray34"></View>
</LinearLayout>
