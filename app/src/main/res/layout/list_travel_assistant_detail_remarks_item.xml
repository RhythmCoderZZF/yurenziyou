<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    android:id="@+id/llyt_remarks_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_l_grey"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_shape_round_gradient"
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_24"
            android:background="@drawable/shape_white_round_orange_edge" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_shape_round_gradient"
            android:layout_marginLeft="@dimen/dp_29"
            android:background="@drawable/bg_blue_and_green_gradient"></View>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_19"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00KM"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_small" />

        <android.support.v7.widget.CardView
            android:id="@+id/cardview_add_my_travel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_21"
            android:elevation="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_15"
            app:cardCornerRadius="@dimen/dp_5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"

                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_10"

                    android:layout_toLeftOf="@+id/image_scenic_spots"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/img_travel_assistant_remarks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_centerVertical="true"
                            android:paddingTop="@dimen/dp_14"
                            android:paddingBottom="@dimen/dp_14"
                            android:src="@mipmap/icon_travel_assistant_remarks" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_4"
                            android:layout_toRightOf="@+id/img_travel_assistant_remarks"
                            android:text="备注"
                            android:paddingTop="@dimen/dp_14"
                            android:paddingBottom="@dimen/dp_14"
                            android:textColor="@color/color_text_gray27"
                            android:textSize="@dimen/text_size_xsmall"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/tv_edit_remark"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginLeft="@dimen/dp_4"
                            android:paddingLeft="@dimen/dp_10"
                            android:drawableRight="@mipmap/icon_right_arrow_blue"
                            android:drawablePadding="@dimen/dp_5"
                            android:text="编辑"
                            android:paddingTop="@dimen/dp_14"
                            android:paddingBottom="@dimen/dp_14"
                            android:textColor="@color/color_text_blue8"
                            android:textSize="@dimen/text_size_small" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_remarks_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:background="@drawable/bg_rect_light_gray_shape_radius_two"
                        android:paddingLeft="@dimen/dp_7"
                        android:paddingTop="@dimen/dp_16"
                        android:paddingBottom="@dimen/dp_16"
                        android:layout_marginBottom="@dimen/dp_16"
                        android:text=""
                        android:textColor="@color/color_text_black7"
                        android:textSize="@dimen/text_size_xsmall" />

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>
