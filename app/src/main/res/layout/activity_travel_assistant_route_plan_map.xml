<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.ScenicSpotsDetailLocationMapActivity">

    <com.amap.api.maps.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/toolbar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"></View>

    <ImageView
        android:id="@+id/img_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_space"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_17"
        android:src="@mipmap/icon_travel_assistant_map_close" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_add_my_travel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_81"
        android:layout_alignParentBottom="true"
        android:elevation="@dimen/dp_2"
        app:cardCornerRadius="@dimen/dp_13">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_81"
            android:layout_alignParentBottom="true"
            android:background="@drawable/bg_white_radius_thirteen_top_shape">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_day_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"></android.support.v7.widget.RecyclerView>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>