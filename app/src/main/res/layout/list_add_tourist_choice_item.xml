<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    android:id="@+id/llyt_visitors_item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_80"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_79">

        <ImageView
            android:id="@+id/img_visitors_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:background="@mipmap/icon_payment_method_check_true"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_toRightOf="@+id/img_visitors_check"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_tourist_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxx"
                android:textColor="@color/txt_font_black2"
                android:textSize="@dimen/text_size_xnormal" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13978689843"
                android:textColor="@color/txt_font_black2"
                android:textSize="@dimen/text_size_xnormal" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_edit_visitors"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:gravity="center_vertical"
            android:text="@string/str_edit"
            android:textColor="@color/color_text_blue5"
            android:textSize="@dimen/text_size_xnormal" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_text_gray16"></View>

</LinearLayout>
