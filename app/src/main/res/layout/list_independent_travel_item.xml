    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_recyclerview_item"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_150"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="@dimen/dp_270"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_independent_travel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_12"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/tv_popular_scenic_spot_sequence"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_independent_travel"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_10" />

        <TextView
            android:id="@+id/tv_independent_travel_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宁波2日1晚自由行"
            android:layout_below="@+id/tv_popular_scenic_spot_sequence"
            android:textColor="@color/color_text_black4"
            android:layout_marginLeft="@dimen/dp_18"
            android:textSize="@dimen/text_size_medium"
            android:layout_marginTop="@dimen/dp_11"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_independent_travel_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="宁波海洋世界+海洋世界大酒店"
            android:layout_below="@+id/tv_independent_travel_title"
            android:textColor="@color/color_text_gray24"
            android:layout_marginLeft="@dimen/dp_18"
            android:textSize="@dimen/text_size_xsmall"
            android:layout_marginTop="@dimen/dp_9"
            android:textStyle="bold" />

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/flowlayout_independent_travel_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_29"
            android:layout_below="@+id/tv_independent_travel_des"
            android:layout_marginBottom="@dimen/dp_14"
            zhy:max_select="-1" />
