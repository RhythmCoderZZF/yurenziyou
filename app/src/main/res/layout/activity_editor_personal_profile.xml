<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_l_grey"
    android:orientation="vertical"
    tools:context=".ui.EditorPersonalProfileActivity">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:background="@color/white"
            android:gravity="top"
            android:hint="想要说点啥..."
            android:maxLength="50"
            android:padding="@dimen/dp_16"
            android:textSize="@dimen/text_size_xnormal" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_profile_length"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:layout_toLeftOf="@+id/tv_save"
                android:text="0/50"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_xnormal" />

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="73dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/bg_rect_gray_shape"
                android:text="@string/str_save"
                android:gravity="center"
                android:textColor="@color/white" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>