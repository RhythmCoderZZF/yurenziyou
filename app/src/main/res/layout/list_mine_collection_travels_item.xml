<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    android:id="@+id/llyt_mine_collection_travels_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_text_gray8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_scenic_spots"
            android:layout_width="101dp"
            android:layout_height="@dimen/dp_100"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_10"
            android:scaleType="fitCenter" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_toRightOf="@+id/image_scenic_spots"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_scenic_spots_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_21"
                android:text="宁波经典2日游"
                android:textColor="@color/txt_font_black2"
                android:textSize="@dimen/text_size_medium"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_scenic_spots_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlyt_price_and_score"
                android:layout_marginTop="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_15"
                android:text="宁波怎么玩宁波怎么玩宁波怎么玩宁波怎么玩宁波怎么玩"
                android:textColor="@color/color_text_gray"
                android:textSize="@dimen/text_size_xsmall" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image_avatar"
                        android:layout_width="@dimen/dp_21"
                        android:layout_height="@dimen/dp_21"
                        android:background="@drawable/shape_round_gray" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_toRightOf="@+id/image_avatar"
                        android:text="宁波哦"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size_tiny"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_13"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableLeft="@mipmap/icon_strategy_collection_gray_love"
                    android:text="45"
                    android:layout_toLeftOf="@+id/tv_collection_num"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_tiny"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/tv_collection_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/dp_5"
                    android:drawableLeft="@mipmap/icon_strategy_collection_gray_love"
                    android:text="45"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_tiny"
                    android:textStyle="bold" />

            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:layout_marginTop="@dimen/dp_10"
        android:alpha="0.25"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_alignParentBottom="true"
        android:background="@color/color_text_gray6"></View>
</LinearLayout>
