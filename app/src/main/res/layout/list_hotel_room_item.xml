<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_hotel_room_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="horizontal">

    <com.nbhysj.coupon.view.RoundedImageView
        android:id="@+id/image_hotel_room"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_15"
        android:scaleType="fitXY"
        app:riv_mutate_background="true"
        app:riv_oval="false"
        app:riv_corner_radius="@dimen/dp_5"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_hotel_room_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_15"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_xnormal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_hotel_room_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlyt_scenic_spots_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_3"
            android:text="不含早餐 18-20m² 双床 无窗"
            android:textColor="@color/color_text_gray20"
            android:textSize="@dimen/text_size_small" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3">

            <TextView
                android:id="@+id/tv_hotel_book_cancel_time_limits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:singleLine="true"
                android:text="当天18点前可免费取消"
                android:textColor="@color/color_orange2"
                android:textSize="@dimen/text_size_tiny" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:textColor="@color/color_orange2"
                    android:textSize="@dimen/text_size_tiny" />

                <TextView
                    android:id="@+id/tv_hotel_room_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_orange2"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>

