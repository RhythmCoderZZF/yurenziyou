<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.RefundDetailsActivity"
    android:orientation="vertical">

    <include layout="@layout/toolbar"></include>

    <com.nbhysj.coupon.view.RecyclerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_16"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款入账"
            android:textColor="@color/color_text_black7"
            android:textSize="@dimen/text_size_xmedium"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tv_accounting_channel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（支付宝）"
            android:textColor="@color/color_text_black7"
            android:textSize="@dimen/text_size_xmedium"
            android:textStyle="bold"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_payment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="（预计最晚2019-05-20日到账"
        android:textColor="@color/color_text_gray35"
        android:textSize="@dimen/text_size_small"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
      />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_text_gray38"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:alpha="0.25"></View>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_14">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="实退金额"
        android:textColor="@color/color_text_gray35"
        android:textSize="@dimen/text_size_xnormal"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
       />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥0.00"
        android:textColor="@color/color_orange3"
        android:textSize="@dimen/text_size_xnormal"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_15"
        android:textStyle="bold"/>

   </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退还账户"
            android:textColor="@color/color_text_gray35"
            android:textSize="@dimen/text_size_xnormal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝支付账户"
            android:textColor="@color/color_text_black7"
            android:textSize="@dimen/text_size_xnormal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
          />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退款流水号"
            android:textColor="@color/color_text_gray35"
            android:textSize="@dimen/text_size_xnormal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥0.00"
            android:textColor="@color/color_text_black7"
            android:textSize="@dimen/text_size_xnormal"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:textStyle="bold"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_text_gray38"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:alpha="0.25"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_refund_success_tag"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="@color/color_text_gray37"></View>

        <TextView
            android:id="@+id/tv_refund_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_30"
            android:layout_marginTop="@dimen/dp_19"
            android:text="预计支付宝会在1日内处理完成，详细进度可使用交易号"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_stroke_radius_five_light_gray_shape"
            android:text="联系客服"
            android:paddingLeft="@dimen/dp_40"
            android:paddingRight="@dimen/dp_40"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_43"
            android:drawableLeft="@mipmap/icon_phone_tag"
            android:drawablePadding="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/color_text_black7"
            />
    </LinearLayout>

    </com.nbhysj.coupon.view.RecyclerScrollView>
</LinearLayout>