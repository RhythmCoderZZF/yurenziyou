<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_my_order_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user_avatar_photo"
                android:layout_width="@dimen/dp_26"
                android:layout_height="@dimen/dp_26"
                android:layout_marginLeft="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_answerer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:alpha="0.66"
                android:text="某某某"
                android:textColor="@color/color_text_blue12"
                android:textSize="@dimen/text_size_normal" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_4"
            android:text="隔音如何，晚上安静吗，睡觉会不会被影响吗？"
            android:textColor="@color/color_text_black7"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginTop="@dimen/dp_15"
            android:alpha="0.15"
            android:background="@color/color_text_gray34"></View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">

            <TextView
                android:id="@+id/tv_question_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:alpha="0.66"
                android:text=""
                android:textColor="@color/color_text_blue12" />

            <TextView
                android:id="@+id/tv_question_ignore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toLeftOf="@+id/tv_question_answer"
                android:background="@drawable/bg_stroke_light_gray_radius_thirteen_shape"
                android:drawableLeft="@mipmap/icon_question_ignore"
                android:drawablePadding="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_3"
                android:text="@string/str_question_ignore"
                android:textColor="@color/color_text_gray27" />

            <TextView
                android:id="@+id/tv_question_answer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@drawable/bg_stroke_light_blue_radius_thirteen_shape"
                android:drawableLeft="@mipmap/icon_answer"
                android:drawablePadding="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_15"
                android:paddingTop="@dimen/dp_3"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_3"
                android:text="回答"
                android:textColor="@color/color_text_blue10" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
