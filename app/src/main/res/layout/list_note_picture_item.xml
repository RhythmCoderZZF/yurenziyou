<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_80"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rlyt_voice_capsule"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/btn_bg_voice_capsule_oprate">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_voice_capsule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@mipmap/icon_voice_capsule"

                />

            <RelativeLayout
                android:id="@+id/rlyt_outer_circle_voice_capsule"
                android:layout_width="@dimen/dp_39"
                android:layout_height="@dimen/dp_39"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/shape_round_blue"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/rlyt_inner_circle_voice_capsule"
                    android:layout_width="@dimen/dp_32"
                    android:layout_height="@dimen/dp_32"
                    android:layout_centerInParent="true"
                    android:background="@drawable/shape_round_blue">

                    <RelativeLayout
                        android:layout_width="@dimen/dp_22"
                        android:layout_height="@dimen/dp_22"
                        android:layout_centerInParent="true"
                        android:background="@drawable/shape_round_blue">

                        <TextView
                            android:id="@+id/tv_sound_recording_length"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_xmedium"
                            android:textStyle="bold" />
                    </RelativeLayout>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_voice_capsule_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text="添加语音"
                android:textColor="@color/color_green3"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

    <com.nbhysj.coupon.view.GlideImageView
        android:id="@+id/img_photograph"
        android:layout_width="@dimen/dp_75"
        android:layout_height="@dimen/dp_75"
        android:layout_marginTop="@dimen/dp_4"
        android:scaleType="centerCrop" />


</RelativeLayout>
