<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    android:id="@+id/llyt_hotel_room_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:id="@+id/view_gradient_top"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_shape_round_gradient"
                android:layout_marginLeft="@dimen/dp_23"
                android:background="@drawable/bg_blue_and_green_gradient"></View>

            <TextView
                android:id="@+id/tv_shape_round_gradient"
                android:layout_width="@dimen/dp_16"
                android:layout_height="@dimen/dp_16"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"
                android:background="@drawable/shape_round_gradient" />

            <View
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_shape_round_gradient"
                android:layout_marginLeft="@dimen/dp_23"
                android:background="@drawable/bg_blue_and_green_gradient"></View>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_shape_round_gradient"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_travel_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_3"
                android:text=""
                android:textSize="@dimen/text_size_nineteen_large" />

            <TextView
                android:id="@+id/tv_travel_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text=""
                android:textColor="@color/color_text_gray20"
                android:textSize="@dimen/text_size_xsmall" />

        </LinearLayout>

    </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_destination_classify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

          ></android.support.v7.widget.RecyclerView>

</LinearLayout>

