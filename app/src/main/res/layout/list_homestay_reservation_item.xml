<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    android:id="@+id/rlyt_homestay_room_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="@dimen/dp_10"
    android:orientation="horizontal">

    <com.nbhysj.coupon.view.RoundedImageView
        android:id="@+id/image_hotel_room"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        ratingbar:riv_corner_radius="@dimen/dp_5"/>

    <LinearLayout
        android:id="@+id/llyt_hotel_room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@+id/image_hotel_room"
        android:layout_marginLeft="@dimen/dp_7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_homestay_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_15"
            android:text=""
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_xnormal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_hotel_room_des"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlyt_scenic_spots_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_3"
            android:text="不含早餐 18-20m² 双床 无窗"
            android:textColor="@color/color_text_gray20"
            android:textSize="@dimen/text_size_small" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_3">

            <TextView
                android:id="@+id/tv_hotel_book_cancel_time_limits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_15"
                android:singleLine="true"
                android:text="当天18点前可免费取消"
                android:textColor="@color/color_orange2"
                android:textSize="@dimen/text_size_tiny" />


        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_gravity="center_vertical|right"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_stroke_dark_orange_shape"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_homestay_room_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥0.00"
                android:textColor="@color/color_orange2"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_medium" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/color_text_orange2"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_immediate_reservation"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginBottom="@dimen/dp_3"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

