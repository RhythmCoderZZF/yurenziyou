<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llyt_recyclerview_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="10dp"
        android:layout_marginTop="@dimen/dp_6">

        <com.nbhysj.coupon.view.GlideImageView
            android:id="@+id/image_avatar"
            android:layout_width="@dimen/dp_29"
            android:layout_height="@dimen/dp_29"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="宁波哦"
            android:layout_toRightOf="@+id/image_avatar"
            android:textColor="@color/color_text_black"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_centerVertical="true"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_follow"
            android:layout_width="@dimen/dp_64"
            android:layout_height="@dimen/dp_28"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="+ 关注"
            android:gravity="center"
            android:textSize="12sp"
            android:padding="@dimen/dp_5"
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/dp_5"
            android:background="@drawable/bg_recommend_tablayout_select" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_recommend_frends_picture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_16"
            android:scrollbars="none" />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_concerned_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="你关注的XXXX也关注了TA"
        android:textColor="@color/color_text_gray"
        android:layout_margin="@dimen/dp_15"
        android:textSize="11sp" />

    <View
        style="@style/line"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_16"></View>
</LinearLayout>
