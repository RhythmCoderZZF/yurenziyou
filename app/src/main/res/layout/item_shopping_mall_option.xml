<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llyt_shopping_mall_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

        <com.nbhysj.coupon.view.GlideImageView
            android:id="@+id/img_shopping_mall_item"
            android:layout_width="@dimen/dp_48"
            android:layout_height="@dimen/dp_49"
            android:layout_marginTop="@dimen/dp_4"
            android:background="@drawable/shape_round_gradient"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_shopping_mall_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/color_text_black4"
            android:layout_marginTop="@dimen/dp_11"
            android:textSize="@dimen/text_size_normal"
            android:text="" />
    </LinearLayout>
</LinearLayout>