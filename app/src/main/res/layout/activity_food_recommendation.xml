<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".ui.FoodRecommendationActivity">

    <com.nbhysj.coupon.view.RecyclerScrollView
        android:id="@+id/scrollview_food_recommendation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_comment_show"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.nbhysj.coupon.view.HotelDetailBannerView
                android:id="@+id/banner_delicious_food"
                android:layout_width="match_parent"
                android:layout_height="240dp"></com.nbhysj.coupon.view.HotelDetailBannerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_13"
                android:text="吉汁味港式手工蛋糕店"
                android:textColor="@color/txt_font_black2"
                android:textSize="@dimen/text_size_most"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12">

                <com.nbhysj.coupon.view.StarBarView
                    android:id="@+id/starbar"
                    android:layout_width="23dp"
                    android:layout_height="21dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_centerVertical="true"
                    android:clickable="false"
                    android:focusable="false"
                    ratingbar:starCount="5"
                    ratingbar:starDistance="5dp"
                    ratingbar:starEmpty="@mipmap/icon_hollow_orange_star_delicious_food"
                    ratingbar:starFill="@mipmap/icon_solid_orange_star_delicious_food"
                    ratingbar:starSize="15dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="￥"
                        android:textColor="@color/color_orange2"
                        android:textSize="@dimen/text_size_xsmall" />

                    <TextView
                        android:id="@+id/tv_hotel_room_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="24"
                        android:textColor="@color/color_orange2"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/"
                        android:textColor="@color/color_orange2"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="人"
                        android:textColor="@color/color_orange2"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="味道:9.0 环境:9.0 服务:9.0"
                    android:textColor="@color/color_text_gray20"
                    android:textSize="@dimen/text_size_xsmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="100评价"
                    android:textColor="@color/color_text_gray20"
                    android:textSize="@dimen/text_size_xsmall" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_21"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_10"
                    android:layout_height="@dimen/dp_14"
                    android:layout_marginLeft="@dimen/dp_14"
                    android:src="@mipmap/icon_black_location" />

                <TextView
                    android:layout_width="228dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:text="鄞州区福明路718号-1室（距地铁1号线福明路站C出口40cm）" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/color_text_gray16"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_16"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/tv_business_hour_tag"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@mipmap/icon_business_hours"
                    android:gravity="center"
                    android:text="榜"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_popularity_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:layout_toRightOf="@+id/tv_business_hour_tag"
                    android:text="营业时间 0.8:00-21:00"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xsmall" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_17"
                    android:src="@mipmap/icon_gray_right_arrow" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/color_text_gray16"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_16"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_popularity_list_tag"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@drawable/bg_note_card_rect_orange_shape"
                    android:gravity="center"
                    android:text="榜"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_small" />

                <TextView
                    android:id="@+id/tv_gourmet_ranking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_8"
                    android:layout_toLeftOf="@+id/image_popularity_list_right_arrow"
                    android:layout_toRightOf="@+id/tv_popularity_list_tag"
                    android:text="鄞州区美食榜第几位"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xsmall" />

                <ImageView
                    android:id="@+id/image_popularity_list_right_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_17"
                    android:src="@mipmap/icon_gray_right_arrow" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@color/white"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llyt_delicious_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_delicious_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="本店推荐"
                        android:textColor="@color/txt_font_black2"
                        android:textSize="@dimen/text_size_xnormal"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/view_delicious_food"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_4"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_6"
                        android:background="@drawable/bg_blue_green_gradient_radius_two"></View>


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llyt_entertainment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_entertainment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="评价"
                            android:textColor="@color/color_text_gray20"
                            android:textSize="@dimen/text_size_xnormal" />

                        <TextView
                            android:id="@+id/tv_comment_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="1028"
                            android:textColor="@color/color_text_gray20"
                            android:textSize="@dimen/text_size_xnormal" />


                    </LinearLayout>

                    <View
                        android:id="@+id/view_entertainment"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_4"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_6"
                        android:background="@drawable/bg_blue_green_gradient_radius_two"
                        android:visibility="gone"></View>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llyt_scenic_spot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingRight="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_scenic_spot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="更多推荐"
                        android:textColor="@color/color_text_gray20"
                        android:textSize="@dimen/text_size_xmedium" />

                    <View
                        android:id="@+id/view_scenic_spot"
                        android:layout_width="@dimen/dp_18"
                        android:layout_height="@dimen/dp_4"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dp_6"
                        android:background="@drawable/bg_blue_green_gradient_radius_two"
                        android:visibility="gone"></View>

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_1"
                android:layout_marginRight="@dimen/dp_13"
                android:background="@color/color_text_gray16"></View>

            <TextView
                android:id="@+id/tv_recommend_delicious_food_look_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_4"
                android:layout_toLeftOf="@+id/image_popularity_list_right_arrow"
                android:layout_toRightOf="@+id/tv_popularity_list_tag"
                android:padding="@dimen/dp_10"
                android:text="查看更多"
                android:textColor="@color/color_text_gray20"
                android:textSize="@dimen/text_size_xsmall" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_shop_recommend_delicious_food"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"></android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/color_text_gray16"></View>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_12">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="用户评价"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_13"
                    android:text="更多评论（1028条)"
                    android:textColor="@color/color_text_gray20"
                    android:textSize="@dimen/text_size_xsmall" />

            </RelativeLayout>

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/flowlayout_food_recommend_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_16"
                zhy:max_select="-1" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_user_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"></android.support.v7.widget.RecyclerView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginBottom="@dimen/dp_14"
                android:background="@drawable/bg_stroke_radius_light_blue_shape"
                android:paddingLeft="@dimen/dp_17"
                android:paddingTop="@dimen/dp_6"
                android:paddingRight="@dimen/dp_17"
                android:paddingBottom="@dimen/dp_6"
                android:text="查看全部用户评论"
                android:textColor="@color/color_text_blue5" />

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="@color/color_text_gray16"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nearby_merchants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_17"
                    android:text="附近商户"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_17"
                    android:src="@mipmap/icon_gray_right_arrow" />

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_delicious_food_more_recommendation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginRight="@dimen/dp_5"></android.support.v7.widget.RecyclerView>

            <View
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:layout_marginTop="@dimen/dp_17"
                android:background="@color/color_text_gray16"></View>
        </LinearLayout>

    </com.nbhysj.coupon.view.RecyclerScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/toolbar_space"
            android:layout_width="match_parent"
            android:layout_height="0dp"></View>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50"
            android:layout_below="@+id/toolbar_space"
            android:layout_marginBottom="0dp"
            android:background="@android:color/transparent"
            app:layout_collapseMode="pin">

            <RelativeLayout
                android:id="@+id/rlyt_scenic_spots_detail_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@mipmap/icon_left_arrow_white" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_collection"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:padding="@dimen/dp_10"
                        android:src="@mipmap/icon_white_collection" />

                    <ImageView
                        android:id="@+id/img_menu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_15"
                        android:padding="@dimen/dp_10"
                        android:src="@mipmap/icon_white_menu_more" />


                </LinearLayout>


            </RelativeLayout>

        </android.support.v7.widget.Toolbar>


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_comment_show"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <EditText
            android:id="@+id/edt_comment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_35"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/tv_user_praise"
            android:background="@drawable/bg_rect_light_gray_shape"
            android:focusable="true"
            android:hint="添加你的评论..."
            android:paddingLeft="@dimen/dp_16"
            android:textColor="@color/color_text_gray5"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_user_praise"
            android:layout_width="@dimen/dp_20"
            android:layout_height="@dimen/dp_20"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_14"
            android:layout_toLeftOf="@+id/tv_user_collection"
            android:background="@mipmap/icon_expression"
            android:padding="10dp" />

        <TextView
            android:id="@+id/tv_user_collection"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:background="@mipmap/icon_chat_add"
            android:padding="10dp" />
    </RelativeLayout>

</RelativeLayout>