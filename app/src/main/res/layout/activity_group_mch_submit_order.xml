                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_21"
                        android:layout_marginBottom="@dimen/dp_20"
                        android:paddingRight="@dimen/dp_7">

                    </android.support.v7.widget.RecyclerView>
                </RelativeLayout>

                <View
