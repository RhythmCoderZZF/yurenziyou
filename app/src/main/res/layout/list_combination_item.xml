<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    android:id="@+id/llyt_recyclerview_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_scenic_spots"
        android:layout_width="122dp"
        android:layout_height="122dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_marginTop="@dimen/dp_5"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_toRightOf="@+id/image_scenic_spots"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_scenic_spots_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_22"
            android:text="海洋世界大酒店亲子房1晚+宁波海洋世界套票（2大1小）..."
            android:lines="2"
            android:ellipsize="end"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_xnormal" />

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/flowlayout_combination_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_scenic_spots_name"
            android:layout_marginTop="@dimen/dp_12"
            zhy:max_select="-1" />

        <RelativeLayout
            android:id="@+id/rlyt_combination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/flowlayout_combination_label"
            android:layout_marginTop="@dimen/dp_12"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_scenic_spots_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_26"
                android:layout_toLeftOf="@+id/llyt_price"
                android:ellipsize="end"
                android:lines="2"
                android:text="入住市中心的5星级度假酒店，与酒店内的海..."
                android:textColor="@color/color_text_gray24"
                android:textSize="@dimen/text_size_xtiny" />


            <LinearLayout
                android:id="@+id/llyt_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="right"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥"
                    android:textColor="@color/color_text_orange2"
                    android:textSize="@dimen/text_size_tiny" />

                <TextView
                    android:id="@+id/tv_per_capita_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_3"
                    android:text="156"
                    android:textColor="@color/color_text_orange2"
                    android:textSize="@dimen/text_size_twenty_one_large"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_tiny" />

            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/rlyt_combination"
            android:layout_marginTop="@dimen/dp_20"
            android:alpha="0.25"
            android:background="@color/color_text_gray6"></View>
    </RelativeLayout>


</RelativeLayout>
