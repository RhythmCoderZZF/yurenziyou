<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_ask_question_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/llyt_answerer_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/image_answer_user_avatar"
                android:layout_width="@dimen/dp_41"
                android:layout_height="@dimen/dp_41"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_15"/>

                <TextView
                    android:id="@+id/tv_answerer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_size_normal"
                    android:alpha="0.66"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:textColor="@color/color_text_blue12"
                    android:text="某某某"/>

        </LinearLayout>


        <TextView
            android:id="@+id/tv_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            android:text="隔音如何，晚上安静吗，睡觉会不会被影响吗？"
            android:textColor="@color/color_text_black7"
            android:textSize="@dimen/text_size_normal"
            android:layout_below="@+id/llyt_answerer_info"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_normal"
            android:alpha="0.66"
            android:layout_gravity="center_vertical"
            android:textColor="@color/color_text_blue12"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_2"
            android:layout_below="@+id/tv_question"
            android:padding="@dimen/dp_10"
            android:text="@string/str_check_the_answers"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:alpha="0.25"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/color_text_gray34"></View>
</LinearLayout>
