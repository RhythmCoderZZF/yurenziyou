<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_collection_album"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_5"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llyt_album"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <com.nbhysj.coupon.view.RoundedImageView
            android:id="@+id/img_album_photo"
            android:layout_width="154dp"
            android:layout_height="154dp"
            android:layout_above="@+id/rlyt_interest_user"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_7"
            android:background="@drawable/bg_light_gray_radius_two_shape"
            android:scaleType="fitXY"
            app:riv_corner_radius="@dimen/dp_2" />

        <TextView
            android:id="@+id/tv_album_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:text="吃吃吃"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_xnormal"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_19"
            android:orientation="horizontal"

            >

            <TextView
                android:id="@+id/tv_album_collect_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_11"
                android:text="0"
                android:textColor="@color/color_text_gray11"
                android:textSize="@dimen/text_size_xnormal"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right">

                <TextView
                    android:id="@+id/tv_album_edit_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:layout_marginRight="@dimen/dp_7"
                    android:drawableLeft="@mipmap/icon_small_album_list_edit"
                    android:drawablePadding="@dimen/dp_6"
                    android:text="@string/str_edit"
                    android:textColor="@color/color_text_gray11"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/llyt_new_album"
        android:layout_width="166dp"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_75"
            android:background="@mipmap/icon_new_album_tag"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_66"
            android:layout_marginBottom="@dimen/dp_40"
            android:text="@string/str_new_albums"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_xnormal"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>
