<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlyt_calendar_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="201dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bg_white_radius_ten_top_shape"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52">

            <TextView
                android:id="@+id/tv_calendar_date_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:drawablePadding="@dimen/dp_7"
                android:text="选择游玩日期"
                android:textColor="@color/color_text_black6"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/img_ticket_date_select_cancel"
                android:layout_width="@dimen/dp_13"
                android:layout_height="@dimen/dp_13"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_25"
                android:gravity="center"
                android:src="@mipmap/icon_cancel" />

        </RelativeLayout>

        <com.nbhysj.coupon.widget.calendar.ticketcalendar.TicketSelectCalendarList
            android:id="@+id/calendar_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_calendar_date_select">

        </com.nbhysj.coupon.widget.calendar.ticketcalendar.TicketSelectCalendarList>

    </LinearLayout>


</RelativeLayout>