<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rlyt_calendar_select"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="201dp"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:background="@drawable/bg_white_radius_five_top_shape"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52">

            <TextView
                android:id="@+id/tv_calendar_date_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="@dimen/dp_15"
                android:drawablePadding="@dimen/dp_7"
                android:layout_centerVertical="true"
                android:hint="请选择时间段"
                android:textColor="@color/color_text_black8" />

            <TextView
                android:id="@+id/tv_calendar_date_select_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_13"
                android:gravity="center"
                android:text="@string/str_complete"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size_xnormal"
                android:textColor="@color/color_text_blue10"
                android:textStyle="bold" />

        </RelativeLayout>

        <com.nbhysj.coupon.widget.calendar.CalendarList
            android:id="@+id/calendar_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/tv_calendar_date_select">

        </com.nbhysj.coupon.widget.calendar.CalendarList>

        <TextView
            android:id="@+id/tv_next"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="29dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/btn_oprate_bg_radius_twenty_three_shape"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp" />

    </LinearLayout>


</RelativeLayout>