<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_text_gray6"
        android:layout_marginTop="@dimen/dp_7"
        android:alpha="0.25"></View>

    <com.nbhysj.coupon.widget.MyIndicator
        android:id="@+id/indicator_collection_select_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_12"
        android:background="@color/white" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_text_gray6"
        android:layout_marginTop="@dimen/dp_13"
        android:alpha="0.25"></View>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_collection"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <FrameLayout
        android:id="@+id/frame_collection"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/group"
        android:visibility="gone"></FrameLayout>

</LinearLayout>