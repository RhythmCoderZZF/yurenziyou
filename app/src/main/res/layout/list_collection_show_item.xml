<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_my_order_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_user_avatar_photo"
                android:layout_width="@dimen/dp_41"
                android:layout_height="@dimen/dp_41"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_4"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:id="@+id/llyt_collection_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_14"
                android:layout_toLeftOf="@+id/img_post_picture"
                android:layout_toRightOf="@+id/img_user_avatar_photo"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_collection_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="收藏了你的《题目题目题目加题...》"
                    android:textColor="@color/color_text_black2"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/tv_collection_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_12"
                    android:text="2019-03-10"
                    android:textColor="@color/color_text_gray36"
                    android:textSize="@dimen/text_size_small" />

            </LinearLayout>

            <ImageView
                android:id="@+id/img_post_picture"
                android:layout_width="@dimen/dp_42"
                android:layout_height="@dimen/dp_42"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@mipmap/icon_arrow_navigation_right" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_marginLeft="@dimen/dp_66"
            android:layout_marginTop="@dimen/dp_20"
            android:alpha="0.25"
            android:background="@color/color_text_gray25"></View>

    </LinearLayout>
</LinearLayout>
