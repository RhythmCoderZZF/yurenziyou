<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AskQuestionsActivity">

    <include layout="@layout/toolbar" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:background="@color/white">

        <com.nbhysj.coupon.view.GlideImageView
            android:id="@+id/img_photo"
            android:layout_width="@dimen/dp_63"
            android:layout_height="@dimen/dp_53"
            android:layout_marginTop="@dimen/dp_12"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_17"
            android:layout_toRightOf="@+id/img_photo"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="海洋世界大酒店"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/txt_font_black2"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5分"
                    android:textSize="@dimen/text_size_xsmall"
                    android:textColor="@color/txt_font_black2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="宁波"
                    android:textSize="@dimen/text_size_xsmall"
                    android:textColor="@color/txt_font_black2" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_15"
            android:src="@mipmap/icon_arrow_navigation_right" />
    </RelativeLayout>

    <View
        style="@style/line"
        android:layout_height="@dimen/dp_15"
        android:background="@color/line_bg"
        android:layout_marginTop="@dimen/dp_10" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edt_profile"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_150"
            android:alpha="0.5"
            android:background="@color/white"
            android:gravity="top"
            android:hint="酒店问题，问题越具体越容易被回答~"
            android:maxLength="50"
            android:padding="@dimen/dp_16"
            android:textColorHint="@color/color_text_blue4"
            android:textCursorDrawable="@drawable/bg_editext_custom_cursor"
            android:textSize="@dimen/text_size_xnormal" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_16">

            <TextView
                android:id="@+id/tv_save"
                android:layout_width="73dp"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/bg_stroke_radius_light_gray_shape"
                android:gravity="center"
                android:text="@string/str_publish"
                android:textColor="@color/txt_font_black2" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>