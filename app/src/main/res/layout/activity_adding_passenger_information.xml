<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text_gray8"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:background="@drawable/bg_passenger_stroke_radius_blue_shape"
        android:padding="@dimen/dp_8"
        android:text="识别证件添加信息"
        android:textSize="@dimen/text_size_xsmall"
        android:textColor="@color/color_text_blue"
        android:visibility="gone"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:text="@string/str_passenger_name_telephone"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_xsmall" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_7"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">


            <TextView
                android:layout_width="@dimen/dp_110"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/str_chinese_name"
                android:textColor="@color/color_text_gray20"
                android:textSize="@dimen/text_size_xnormal" />

            <EditText
                android:id="@+id/edt_chinese_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@null"
                android:hint="@string/str_documents_with_identical_names"
                android:maxLines="1"
                android:textColorHint="@color/color_text_gray7"
                android:textCursorDrawable="@drawable/bg_editext_custom_cursor"
                android:textSize="@dimen/text_size_normal" />

        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="@dimen/dp_16" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="@dimen/dp_110"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/str_phone"
                android:textColor="@color/color_text_gray20"
                android:textSize="@dimen/text_size_xnormal" />

            <EditText
                android:id="@+id/edt_phone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_toLeftOf="@+id/img_passenger_avatar"
                android:layout_toRightOf="@+id/tv_phone"
                android:background="@null"
                android:hint="@string/str_input_phone"
                android:textCursorDrawable="@drawable/bg_editext_custom_cursor"
                android:maxLines="1"
                android:textColorHint="@color/color_text_gray7"
                android:textSize="@dimen/text_size_xnormal" />

            <ImageView
                android:id="@+id/img_passenger_avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_16"
                android:src="@mipmap/icon_passenger_default_avatar"
                android:visibility="gone"/>

        </RelativeLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="@dimen/dp_16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10"
            android:drawableRight="@mipmap/icon_certificate_consistency_tips"
            android:text="为顺利出行, 请确保出行姓名与证件上一致。"
            android:textSize="@dimen/text_size_xsmall" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_25"
            android:text="证件" />

        <View
            style="@style/line"
            android:layout_marginLeft="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_10" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/str_identification_card"
                android:textColor="@color/txt_font_black2"
                android:textSize="@dimen/text_size_xnormal"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            style="@style/line"
            android:layout_marginLeft="@dimen/dp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_email"
                android:layout_width="@dimen/dp_110"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/dp_16"
                android:text="@string/str_identification_number"
                android:textColor="@color/color_text_gray20"
                android:textSize="@dimen/text_size_xnormal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_44"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/edt_identity_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/dp_10"
                    android:background="@null"
                    android:hint="请保持与证件一致"
                    android:maxLines="1"
                    android:textCursorDrawable="@drawable/bg_editext_custom_cursor"
                    android:textColorHint="@color/color_text_gray7"
                    android:textSize="@dimen/text_size_xnormal" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_20" />

    <RelativeLayout
        android:id="@+id/rlyt_privacy_setting"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_15"
            android:text="设置为本人"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_xnormal" />

        <com.nbhysj.coupon.widget.ToggleButton
            android:id="@+id/btn_toggle_set_up_as_self"
            android:layout_width="48dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/dp_14"
            toggle:tbBorderWidth="1dp"
            toggle:tbOffBorderColor="@color/line_grey"
            toggle:tbOffColor="@color/white"
            toggle:tbOnColor="@color/color_green2"
            toggle:tbSpotColor="@color/white" />
    </RelativeLayout>

    <View
        style="@style/line"
        android:layout_marginLeft="@dimen/dp_16" />

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_41"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_36"
        android:layout_marginBottom="@dimen/dp_40"
        android:background="@drawable/btn_oprate_bg"
        android:gravity="center"
        android:text="@string/str_save"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large" />

</LinearLayout>