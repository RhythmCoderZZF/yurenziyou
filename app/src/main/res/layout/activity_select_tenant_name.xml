<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_l_grey"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context=".ui.SelectTenantNameActivity">

    <View
        android:id="@+id/toolbar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"></View>

    <include layout="@layout/layout_header" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_19"
        android:layout_marginBottom="@dimen/dp_16"
        android:text="新增住客姓名"
        android:textColor="@color/txt_font_black2"
        android:textSize="@dimen/text_size_xsmall" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_39"
        android:background="@color/white"
        android:hint="请输入住客的名字"
        android:paddingLeft="@dimen/dp_17"
        android:textSize="@dimen/text_size_xsmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:text="新增住客姓名"
        android:textColor="@color/txt_font_black2"
        android:textSize="@dimen/text_size_xsmall" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_17"
        android:text="每间房只能填1个入住人。知己入住人往时可以按该房间允许入住的人数办理。"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/text_size_small" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="31dp"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/icon_no_frequent_passengers" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_11"
            android:text="新增住客姓名"
            android:textColor="@color/color_text_gray20"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/flowlayout_frequent_passengers_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="25dp"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_16"
        zhy:max_select="-1" />

</LinearLayout>