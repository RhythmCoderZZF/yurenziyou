<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llyt_recyclerview_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_header"
        android:layout_width="@dimen/dp_10"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="138dp"
            android:layout_height="@dimen/dp_134">

            <ImageView
                android:id="@+id/image_scenic_spots"
                android:layout_width="@dimen/dp_134"
                android:layout_height="@dimen/dp_134"
                android:layout_centerVertical="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_popular_scenic_spot_sequence"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_tag_red_purple_gradient"
                android:gravity="center"
                android:text="No.1"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_scenic_spots_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_5"
            android:text="宁波海洋世界"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/color_text_orange2"
                android:textSize="@dimen/text_size_tiny" />

            <TextView
                android:id="@+id/tv_scenic_spots_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="156"
                android:textColor="@color/color_text_orange2"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_footer"
        android:layout_width="@dimen/dp_15"
        android:layout_height="match_parent" />
</LinearLayout>
