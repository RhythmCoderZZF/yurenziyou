<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llyt_add_accommodation_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_scenic_spots"
        android:layout_width="108dp"
        android:layout_height="108dp"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:scaleType="fitCenter" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="31dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_destination_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:text="海洋世界大酒店"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/rlyt_price_and_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_destination_name"
            android:layout_marginTop="@dimen/dp_6"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/starbar_store_fine_food"
                android:text="4.6分"
                android:textColor="@color/color_text_orange2"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_7"
                android:text="|"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="234条点评"
                android:textSize="@dimen/text_size_xtiny"
                android:textStyle="bold" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_scenic_spot_recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlyt_price_and_score"
            android:layout_marginTop="@dimen/dp_8"
            android:text="地铁旁 交通便利"
            android:textColor="@color/color_text_gray22"
            android:textSize="@dimen/text_size_tiny" />

        <LinearLayout
            android:id="@+id/llyt_hotel_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_scenic_spot_recommend"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="@color/color_text_orange2"
                android:textSize="@dimen/text_size_tiny" />

            <TextView
                android:id="@+id/tv_per_capita_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_3"
                android:text="156"
                android:textColor="@color/color_text_orange2"
                android:textSize="@dimen/text_size_xmedium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="起"
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_tiny"
                android:textStyle="bold" />

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:layout_below="@+id/llyt_hotel_price"
            android:layout_marginTop="@dimen/dp_10"
            android:alpha="0.25"
            android:background="@color/color_text_gray6"></View>

        <TextView
            android:id="@+id/tv_add_my_travel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_scenic_spots_name"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_9"
            android:background="@mipmap/icon_travel_assistant_add_tag"
            android:paddingLeft="@dimen/dp_15"
            android:paddingTop="@dimen/dp_3"
            android:paddingRight="@dimen/dp_15"
            android:paddingBottom="@dimen/dp_3"
            android:textColor="@color/color_text_gray20"
            android:textSize="@dimen/text_size_small" />
    </RelativeLayout>


</LinearLayout>
