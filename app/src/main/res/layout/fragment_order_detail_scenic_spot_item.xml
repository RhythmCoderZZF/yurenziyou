<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_scenic_spot_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_16"
        android:text="宁波海洋世界"
        android:textColor="@color/txt_font_black2"
        android:textSize="@dimen/text_size_large"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15">

        <TextView
            android:id="@+id/tv_ticket_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="家庭票A(两大一小)"
            android:textColor="@color/color_text_gray11"
            android:textSize="@dimen/text_size_small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:text="使用时间:"
                android:textColor="@color/color_text_gray11"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_ticket_use_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_14"
                android:text=""
                android:textColor="@color/txt_font_black2"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_14"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginRight="@dimen/dp_14"
        android:text="8:30~17:00（平日17:30闭馆）8:30~17:30（周末暑假节假日19:30闭馆）"
        android:textColor="@color/color_text_gray11"
        android:textSize="@dimen/text_size_small" />

    <ImageView
        android:layout_width="345dp"
        android:layout_height="85dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_15"
        android:background="@mipmap/icon_map" />

    <TextView
        android:id="@+id/tv_scenic_spot_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_12"
        android:drawableLeft="@mipmap/icon_location_distance_gray"
        android:drawablePadding="@dimen/dp_5"
        android:text="宁波市 鄞州区 桑田路936号"
        android:textColor="@color/txt_font_black2"
        android:textSize="@dimen/text_size_normal" />

</LinearLayout>