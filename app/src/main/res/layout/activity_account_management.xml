<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_l_grey"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="@dimen/dp_10"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlyt_phone_bind_status"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/str_bind_phone"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />

                <TextView
                    android:id="@+id/tv_bind_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="@string/str_bound"
                    android:textColor="@color/text_grey"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_xsmall"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/icon_arrow_navigation_right" />

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_16" />

            <RelativeLayout
                android:id="@+id/rlyt_bind_email"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/str_bind_email"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />

                <TextView
                    android:id="@+id/tv_bind_email"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="@string/str_bind_immediately"
                    android:textColor="@color/text_grey"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_xsmall"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/icon_arrow_navigation_right" />

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_16" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/str_wechat_account"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />

                <TextView
                    android:id="@+id/tv_wechat_account_bind"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="@string/str_bind_immediately"
                    android:textColor="@color/text_grey"
                    android:gravity="center"
                    android:textSize="@dimen/text_size_xsmall"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/icon_arrow_navigation_right" />

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_16" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/str_qq_account"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />

                <TextView
                    android:id="@+id/tv_qq_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="@string/str_bind_immediately"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_xsmall"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/icon_arrow_navigation_right" />

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_16" />

            <RelativeLayout
                android:id="@+id/rlyt_bind_account_and_setting"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/str_weibo_account"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />

                <TextView
                    android:id="@+id/tv_weibo_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text="@string/str_bind_immediately"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_xsmall"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/icon_arrow_navigation_right" />

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_16" />

            <RelativeLayout
                android:id="@+id/rlyt_update_password"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:text="@string/str_update_pwd"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_16"
                    android:textColor="@color/text_grey"
                    android:textSize="@dimen/text_size_xsmall"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:drawableRight="@mipmap/icon_arrow_navigation_right" />

            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_16" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/rlyt_logout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:background="@color/line"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="退出当前账号"
            android:textColor="@color/txt_font_black2" />

    </RelativeLayout>
</RelativeLayout>