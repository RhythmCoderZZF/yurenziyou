<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlyt_vehicle_use_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginBottom="0dp"
        android:background="@drawable/bg_white_radius_ten_top_shape"
        android:clickable="true"
        android:focusableInTouchMode="false"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlyt_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_52">

            <TextView
                android:id="@+id/tv_vehicle_use_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="@string/str_cancel"
                android:textColor="@color/color_text_black7"
                android:textSize="@dimen/text_size_medium" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="@string/str_fill_in_vehicle_info"
                android:textColor="@color/color_text_black7"
                android:textSize="@dimen/text_size_xmedium"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_vehicle_use_sure"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp_5"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_10"
                android:text="@string/str_sure"
                android:textColor="@color/color_text_black7"
                android:textSize="@dimen/text_size_xnormal"
                android:textStyle="bold" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_17"
            android:alpha="0.25"
            android:background="@color/color_text_gray38"></View>

        <RelativeLayout
            android:id="@+id/rlyt_my_location"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/bg_home_search">

            <TextView
                android:id="@+id/tv_my_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_17"
                android:drawableLeft="@drawable/shape_round_green_small"
                android:drawablePadding="@dimen/dp_15"
                android:hint="@string/str_my_position"
                android:textColor="@color/color_text_black7"
                android:textColorHint="@color/color_text_gray28"
                android:textSize="@dimen/text_size_xnormal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/icon_arrow_navigation_right" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_17"
            android:alpha="0.25"
            android:background="@color/color_text_gray38"></View>

        <RelativeLayout
            android:id="@+id/rlyt_destination"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/bg_home_search"
            android:weightSum="5">

            <TextView
                android:id="@+id/tv_destination"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_24"
                android:layout_marginTop="@dimen/dp_17"
                android:drawableLeft="@drawable/shape_round_orange_small"
                android:drawablePadding="@dimen/dp_15"
                android:hint="@string/str_where_are_you_going"
                android:textColor="@color/color_text_black7"
                android:textColorHint="@color/color_text_gray28"
                android:textSize="@dimen/text_size_xnormal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/icon_arrow_navigation_right" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_17"
            android:alpha="0.25"
            android:background="@color/color_text_gray38"></View>

        <RelativeLayout
            android:id="@+id/rlyt_your_travel_time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/bg_home_search">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:src="@mipmap/icon_travel_time" />

                <TextView
                    android:id="@+id/tv_your_travel_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_12"
                    android:hint="@string/str_your_travel_time"
                    android:textColor="@color/color_text_black7"
                    android:textColorHint="@color/color_text_gray28"
                    android:textSize="@dimen/text_size_xnormal" />
            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/icon_arrow_navigation_right" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_17"
            android:alpha="0.25"
            android:background="@color/color_text_gray38"></View>

        <RelativeLayout
            android:id="@+id/rlyt_vehicle_model"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45"
            android:background="@drawable/bg_home_search">

            <TextView
                android:id="@+id/tv_vehicle_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginTop="@dimen/dp_17"
                android:drawableLeft="@mipmap/icon_use_the_car"
                android:drawablePadding="@dimen/dp_12"
                android:hint="@string/str_selection_of_vehicle_model"
                android:textColor="@color/color_text_black7"
                android:textColorHint="@color/color_text_gray28"
                android:textSize="@dimen/text_size_xnormal" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:src="@mipmap/icon_arrow_navigation_right" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/dp_14"
            android:layout_marginRight="@dimen/dp_17"
            android:alpha="0.25"
            android:background="@color/color_text_gray38"></View>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_30"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_total_cost"
                android:textColor="@color/color_text_black9"
                android:textSize="@dimen/text_size_xsmall" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_5"
                android:text="Â¥"
                android:textColor="@color/color_orange3"
                android:textSize="@dimen/text_size_tiny" />

            <TextView
                android:id="@+id/tv_vehicle_use_expenses"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.00"
                android:textColor="@color/color_orange3"
                android:textSize="@dimen/text_size_xmedium" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_vehicle_use_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_30"
            android:background="@mipmap/icon_determine_vehicle_usage" />
    </LinearLayout>


</RelativeLayout>