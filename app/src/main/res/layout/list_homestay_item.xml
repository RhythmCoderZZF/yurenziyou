<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_homestay_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_15">

        <com.nbhysj.coupon.view.RoundedImageView
            android:id="@+id/img_homestay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_210"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            app:riv_corner_radius="5dip"
            app:riv_mutate_background="true"
            app:riv_oval="false" />

        <ImageView
            android:id="@+id/img_homestay_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_9"
            android:layout_marginRight="@dimen/dp_3"
            android:padding="@dimen/dp_10"
            android:src="@mipmap/icon_homestay_collection" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_homestay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_14"
            android:textColor="@color/color_text_black7"
            android:textSize="@dimen/text_size_xnormal"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_homestay_address"
            android:layout_width="@dimen/dp_250"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_homestay_name"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_9"
            android:textColor="@color/color_text_gray35"
            android:textSize="@dimen/text_size_xsmall" />

        <LinearLayout
            android:id="@+id/llyt_homestay_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_homestay_address"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_15"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hotel_reputation_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_2"
                android:text="¥"
                android:textColor="@color/color_orange3"
                android:textSize="@dimen/text_size_tiny" />

            <TextView
                android:id="@+id/tv_homestay_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_1"
                android:text="0"
                android:textColor="@color/color_orange3"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_hotel_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/晚"
                android:textColor="@color/color_text_gray40"
                android:textSize="@dimen/text_size_xtiny" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_16"
            android:orientation="vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_the_owner_of_the_house_avatar"
                android:layout_width="@dimen/dp_38"
                android:layout_height="@dimen/dp_38"
                android:layout_gravity="center_horizontal" />

            <ImageView
                android:id="@+id/img_house_owner_name_authentication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_marginRight="@dimen/dp_1"
                android:src="@mipmap/icon_house_owner_real_name_authentication" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
