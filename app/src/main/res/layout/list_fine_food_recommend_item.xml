<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    android:id="@+id/rlyt_fine_food_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
   >

    <RelativeLayout
        android:id="@+id/rlyt_fine_food"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_11"
        android:layout_marginLeft="@dimen/dp_15">

        <com.nbhysj.coupon.view.RoundedImageView
            android:id="@+id/image_fine_food"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            app:riv_corner_radius="5dip" />

        <TextView
            android:id="@+id/tv_fine_food_serial_number"
            android:layout_width="@dimen/dp_47"
            android:layout_height="@dimen/dp_21"
            android:background="@drawable/bg_tag_fine_food_red_purple_gradient"
            android:gravity="center"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal"
            android:visibility="gone" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_21"
        android:layout_toRightOf="@+id/rlyt_fine_food"
        android:layout_marginTop="@dimen/dp_18"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/rlyt_mch_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_mch_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_7"
                android:text=""
                android:textColor="@color/txt_font_black2"
                android:layout_toLeftOf="@+id/tv_praise_num"
                android:layout_marginRight="@dimen/dp_10"
                android:textSize="@dimen/text_size_xnormal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_praise_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/dp_7"
                android:layout_marginRight="@dimen/dp_18"
                android:drawableLeft="@mipmap/icon_love_gray"
                android:drawablePadding="@dimen/dp_4"
                android:text=""
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_xsmall" />


        </RelativeLayout>

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rlyt_mch_name"
            android:layout_marginTop="@dimen/dp_8"
            android:text="¥0"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_xtiny" />


        <TextView
            android:id="@+id/tv_flowlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_stroke_radius_two_orange_shape"
            android:text="人气推荐"
            android:textSize="@dimen/text_size_tiny"
            android:paddingRight="@dimen/dp_3"
            android:paddingTop="@dimen/dp_1"
            android:layout_below="@+id/tv_price"
            android:paddingBottom="@dimen/dp_1"
            android:layout_marginRight="@dimen/dp_3"
            android:layout_marginTop="@dimen/dp_12"
            android:button="@null"
            android:checked="false"
            android:textColor="@color/color_text_orange2"></TextView>



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:alpha="0.25"
            android:layout_below="@+id/tv_flowlayout"
            android:layout_marginTop="@dimen/dp_36"
            android:background="@color/color_text_gray6"></View>

    </RelativeLayout>



</RelativeLayout>
