<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_recyclerview_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_8"
    android:elevation="@dimen/dp_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_delicious_food"
            android:layout_width="132dp"
            android:layout_height="@dimen/dp_99"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_17"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_delicious_food_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginLeft="@dimen/dp_12"
            android:text="店名"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_xsmall"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <com.nbhysj.coupon.view.StarBarView
                android:id="@+id/starbar"
                android:layout_width="5dp"
                android:layout_height="5dp"
                android:clickable="false"
                android:focusable="false"
                ratingbar:starCount="5"
                ratingbar:starDistance="5dp"
                android:layout_gravity="center_vertical"
                ratingbar:starEmpty="@mipmap/icon_hollow_orange_star"
                ratingbar:starFill="@mipmap/icon_solid_orange_star"
                ratingbar:starSize="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_12"
                android:text="¥24/人"
                android:layout_gravity="center_vertical"
                android:textColor="@color/color_text_gray20"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:text="鄞州区 666m"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_16"
            android:textColor="@color/color_text_gray20"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>


</android.support.v7.widget.CardView>
