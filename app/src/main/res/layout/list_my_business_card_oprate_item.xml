<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    android:id="@+id/rlyt_drop_down_menu_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/dp_15"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_my_business_card_oprate_item"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:textColor="@color/txt_font_black2"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/shape_round_white"
            android:layout_marginTop="@dimen/dp_22" />


        <TextView
            android:id="@+id/tv_my_business_card_oprate_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:layout_marginBottom="@dimen/dp_22"
            android:layout_gravity="center_horizontal"
            android:text=""
            android:textColor="@color/white"></TextView>

    </LinearLayout>

    <View
        android:id="@+id/view_my_business_card_oprate"
        android:layout_width="@dimen/dp_1"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_11"
        android:layout_marginBottom="@dimen/dp_22"
        android:layout_marginTop="@dimen/dp_22"
        android:alpha="0.25"
        android:background="@color/white"></View>


</LinearLayout>

