<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="1dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="15dp"
        android:src="@drawable/bg_white_regular_triangle"
        android:background="@null" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_add_my_travel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_21">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menu_item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:drawableLeft="@mipmap/icon_homepage"
                android:drawablePadding="@dimen/dp_6"
                android:textSize="@dimen/text_size_xnormal"
                android:textColor="@color/color_text_black7"
                android:text="返回首页" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_14"
                android:background="@color/color_text_gray25"
                android:alpha="0.25"></View>

            <TextView
                android:id="@+id/menu_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_15"
                android:drawableLeft="@mipmap/icon_black_collection"
                android:drawablePadding="@dimen/dp_6"
                android:textSize="@dimen/text_size_xnormal"
                android:textColor="@color/color_text_black7"
                android:text="我的收藏" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_14"
                android:background="@color/color_text_gray25"
                android:alpha="0.25"></View>

            <TextView
                android:id="@+id/menu_item3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_15"
                android:drawableLeft="@mipmap/icon_black_my_order"
                android:textColor="@color/color_text_black7"
                android:drawablePadding="@dimen/dp_6"
                android:textSize="@dimen/text_size_xnormal"
                android:text="我的订单" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/dp_14"
                android:background="@color/color_text_gray25"
                android:alpha="0.25"></View>

            <TextView
                android:id="@+id/menu_item4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginRight="@dimen/dp_15"
                android:drawableLeft="@mipmap/icon_black_my_message"
                android:drawablePadding="@dimen/dp_6"
                android:textSize="@dimen/text_size_xnormal"
                android:textColor="@color/color_text_black7"
                android:layout_marginBottom="@dimen/dp_14"
                android:text="我的消息" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>