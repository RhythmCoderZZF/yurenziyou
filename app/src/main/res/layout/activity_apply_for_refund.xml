<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.PartialApplyForRefundActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <com.nbhysj.coupon.view.RecyclerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/tv_apply_for_refund"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:alpha="0.25"
                android:background="@color/color_text_gray16"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <com.nbhysj.coupon.view.RoundedImageView
                    android:id="@+id/image_fine_food"
                    android:layout_width="104dp"
                    android:layout_height="104dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/dp_14"
                    android:scaleType="fitXY"
                    app:riv_corner_radius="5dip"
                    app:riv_mutate_background="true"
                    app:riv_oval="false"

                    />



                <RelativeLayout
                    android:id="@+id/rlyt_fine_food"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:layout_toLeftOf="@+id/llyt_add_fine_food"
                    android:layout_toRightOf="@+id/image_fine_food"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_fine_food_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_23"
                        android:text="宁波海洋世界成人票"
                        android:textColor="@color/txt_font_black2"
                        android:textSize="@dimen/text_size_xsmall"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/rlyt_has_been_used_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tv_fine_food_name"
                        android:layout_marginTop="@dimen/dp_13"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="已使用:"
                            android:textSize="@dimen/text_size_xsmall"

                            />

                        <TextView
                            android:id="@+id/tv_has_been_used_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/dp_7"
                            android:layout_toRightOf="@+id/starbar_store_fine_food"
                            android:text="1"
                            android:textColor="@color/color_text_gray24"
                            android:textSize="@dimen/text_size_xsmall" />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/rlyt_has_been_used_num"
                        android:layout_marginTop="@dimen/dp_5">

                        <LinearLayout
                            android:id="@+id/rlyt_quantity_of_refund_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
android:layout_centerVertical="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="申请退款数量:"
                                android:textSize="@dimen/text_size_xsmall"

                                />

                            <TextView
                                android:id="@+id/tv_quantity_of_refund_num"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_7"
                                android:layout_toRightOf="@+id/starbar_store_fine_food"
                                android:text="1"
                                android:textColor="@color/color_text_gray24"
                                android:textSize="@dimen/text_size_xsmall" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginRight="@dimen/dp_11"
                              >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="退款数量"
                                    android:textColor="@color/color_text_gray20"
                                    android:layout_gravity="center"
                                    android:layout_marginLeft="@dimen/dp_15"
                                    android:layout_marginRight="@dimen/dp_7"
                                    android:textSize="@dimen/text_size_xsmall" />

                                <ImageView
                                    android:id="@+id/ibtn_reduce_refund_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/dp_5"
                                    android:src="@mipmap/icon_reduce_refund_num" />

                                <TextView
                                    android:id="@+id/tv_refund_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dp_11"
                                    android:layout_marginRight="@dimen/dp_11"
                                    android:text="1"
                                    android:textColor="@color/txt_font_black2"
                                    android:textSize="@dimen/text_size_xmedium" />

                                <ImageView
                                    android:id="@+id/ibtn_add_refund_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:padding="@dimen/dp_5"
                                    android:src="@mipmap/icon_add_refund_num" />
                            </LinearLayout>
                        </LinearLayout>


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dp_20"
                        android:layout_marginRight="@dimen/dp_15"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/color_text_black7"
                                android:layout_marginRight="@dimen/dp_1"
                                android:text="¥"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/text_size_xnormal"
                                android:textColor="@color/color_text_black7"

                                android:textStyle="bold"
                                android:text="156.00"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_good_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_small"
                            android:layout_gravity="right"
                            android:textColor="@color/color_text_gray27"
                            android:text="x2"/>
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="扣款原因扣款原因扣款原因扣款原因扣款原因扣款原因扣款原因扣款原因扣款:"
                android:textSize="@dimen/text_size_tiny"
                android:textColor="@color/color_orange3"
                android:layout_marginLeft="@dimen/dp_17"
                android:layout_marginRight="@dimen/dp_14"
                android:layout_marginTop="@dimen/dp_9"

                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:alpha="0.25"
                android:layout_marginTop="@dimen/dp_14"
                android:layout_marginLeft="@dimen/dp_17"
                android:background="@color/color_text_gray6"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品总价"
                    android:textColor="@color/color_text_gray17"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/text_size_xsmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥340"
                    android:textColor="@color/txt_font_black2"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_xnormal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:text="扣款金额"
                        android:textColor="@color/color_text_gray17"
                        android:textSize="@dimen/text_size_xsmall" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(扣除海洋世界成人票)"
                        android:textColor="@color/color_text_orange2"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_xsmall" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-¥175"
                    android:textColor="@color/txt_font_black2"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_xnormal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实退金额"
                    android:textColor="@color/color_text_gray17"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/text_size_xsmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥175"
                    android:textColor="@color/color_text_orange2"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_xnormal" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_text_gray16"
                android:layout_marginTop="@dimen/dp_15"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:text="原路退回"
                        android:textColor="@color/txt_font_black2"
                        android:textSize="@dimen/text_size_xsmall" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(1-7个工作日内退款到原支付方)"
                        android:textColor="@color/color_text_orange2"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_xtiny" />

                </LinearLayout>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:background="@mipmap/icon_refund_to_the_original_road"
                    android:button="@null"
                    android:visibility="gone"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_text_gray16"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款原因"
                android:textColor="@color/color_text_gray17"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_16"
                android:textSize="@dimen/text_size_xnormal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_text_gray16"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:alpha="0.25"></View>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_refund_reason_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:hint="填写退款原因:"
                android:textColor="@color/color_text_gray17"
                android:textColorHint="@color/color_text_gray17"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="top"
                android:background="@null"
                android:textSize="@dimen/text_size_xnormal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_text_gray16"></View>

        </LinearLayout>

    </com.nbhysj.coupon.view.RecyclerScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_text_gray16"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_above="@+id/tv_apply_for_refund"></View>

    <TextView
        android:id="@+id/tv_apply_for_refund"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:text="确认退款"
        android:gravity="center"
        android:textColor="@color/color_text_orange2"
        android:textSize="@dimen/text_size_xmedium"
        android:background="@color/white" />
</RelativeLayout>