<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ApplyForRefundActivity"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:id="@+id/toolbar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"></View>

    <include layout="@layout/layout_header" />

    <com.nbhysj.coupon.view.RecyclerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/tv_apply_for_refund"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:alpha="0.25"
                android:background="@color/color_text_gray16"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llyt_ticket_information"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="宁波海洋世界成人票"
                        android:textColor="@color/txt_font_black2"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:textSize="@dimen/text_size_xnormal" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_14"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退款数量："
                            android:textColor="@color/color_text_gray17"
                            android:textSize="@dimen/text_size_xsmall" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/color_text_gray20"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:textSize="@dimen/text_size_xsmall" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥175"
                        android:textColor="@color/txt_font_black2"
                        android:textSize="@dimen/text_size_xnormal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="x2"
                        android:textColor="@color/color_text_gray17"
                        android:layout_marginTop="@dimen/dp_5"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:textSize="@dimen/text_size_xsmall" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llyt_ticket_information"
                    android:layout_marginTop="@dimen/dp_13">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="可退退款数量："
                            android:textColor="@color/color_text_gray17"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:textSize="@dimen/text_size_xsmall" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textColor="@color/color_text_gray20"
                            android:layout_marginLeft="@dimen/dp_5"
                            android:textSize="@dimen/text_size_xsmall" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/dp_15">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="退款数量"
                            android:textColor="@color/color_text_gray20"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:layout_marginRight="@dimen/dp_7"
                            android:textSize="@dimen/text_size_xsmall" />

                        <ImageButton
                            android:id="@+id/ibtn_reduce_refund_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/dp_10"
                            android:background="@mipmap/icon_reduce_refund_num" />

                        <TextView
                            android:id="@+id/tv_refund_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_11"
                            android:layout_marginRight="@dimen/dp_11"
                            android:text="1"
                            android:textColor="@color/txt_font_black2"
                            android:textSize="@dimen/text_size_xmedium" />

                        <ImageButton
                            android:id="@+id/ibtn_add_refund_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:padding="@dimen/dp_10"
                            android:background="@mipmap/icon_add_refund_num" />
                    </LinearLayout>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:alpha="0.25"
                android:layout_marginTop="@dimen/dp_16"
                android:layout_marginLeft="@dimen/dp_17"
                android:background="@color/color_text_gray6"></View>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品总价"
                    android:textColor="@color/color_text_gray17"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/text_size_xsmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥340"
                    android:textColor="@color/txt_font_black2"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_xnormal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:text="扣款金额"
                        android:textColor="@color/color_text_gray17"
                        android:textSize="@dimen/text_size_xsmall" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(扣除海洋世界成人票)"
                        android:textColor="@color/color_text_orange2"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_xsmall" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-¥175"
                    android:textColor="@color/txt_font_black2"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_xnormal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="实退金额"
                    android:textColor="@color/color_text_gray17"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:textSize="@dimen/text_size_xsmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥175"
                    android:textColor="@color/color_text_orange2"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1"
                    android:layout_gravity="right"
                    android:gravity="right"
                    android:textSize="@dimen/text_size_xnormal" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_text_gray16"
                android:layout_marginTop="@dimen/dp_15"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:text="原路退回"
                        android:textColor="@color/txt_font_black2"
                        android:textSize="@dimen/text_size_xsmall" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="(1-7个工作日内退款到原支付方)"
                        android:textColor="@color/color_text_orange2"
                        android:layout_weight="1"
                        android:textSize="@dimen/text_size_xtiny" />

                </LinearLayout>

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:background="@mipmap/icon_refund_to_the_original_road"
                    android:button="@null" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_text_gray16"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="退款原因"
                android:textColor="@color/color_text_gray17"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_16"
                android:textSize="@dimen/text_size_xnormal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/color_text_gray16"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:alpha="0.25"></View>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_refund_reason_select"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </android.support.v7.widget.RecyclerView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_100"
                android:hint="填写退款原因:"
                android:textColor="@color/color_text_gray17"
                android:textColorHint="@color/color_text_gray17"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_16"
                android:gravity="top"
                android:background="@null"
                android:textSize="@dimen/text_size_xnormal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/color_text_gray16"></View>

        </LinearLayout>

    </com.nbhysj.coupon.view.RecyclerScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_text_gray16"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_above="@+id/tv_apply_for_refund"></View>

    <TextView
        android:id="@+id/tv_apply_for_refund"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_45"
        android:layout_alignParentBottom="true"
        android:text="申请退款"
        android:gravity="center"
        android:textColor="@color/color_text_orange2"
        android:textSize="@dimen/text_size_xmedium"
        android:background="@color/white" />
</RelativeLayout>