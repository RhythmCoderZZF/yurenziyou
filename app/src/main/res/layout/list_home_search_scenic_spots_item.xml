<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_hot_scenic_spots_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_header"
        android:layout_width="@dimen/dp_10"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="163dp"
            android:layout_height="102dp">

            <com.nbhysj.coupon.view.RoundedImageView
                android:id="@+id/image_scenic_spots"
                android:layout_width="163dp"
                android:layout_height="102dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                app:riv_corner_radius="@dimen/dp_5"/>

            <TextView
                android:id="@+id/tv_popular_scenic_spot_sequence"
                android:layout_width="@dimen/dp_36"
                android:layout_height="@dimen/dp_16"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_tag_red_purple_gradient"
                android:gravity="center"
                android:text="No.1"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/white"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/dp_5"
                android:layout_marginBottom="@dimen/dp_9">

                <TextView
                    android:id="@+id/tv_scenic_spots_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0分"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_nine" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_3"
                    android:layout_marginTop="@dimen/dp_2"
                    android:layout_marginRight="@dimen/dp_3"
                    android:layout_marginBottom="@dimen/dp_2"
                    android:background="@color/white"></View>

                <TextView
                    android:id="@+id/tv_scenic_spots_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_nine" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_9"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥"
                    android:layout_marginRight="@dimen/dp_1"
                    android:textColor="@color/color_text_orange2"
                    android:textSize="@dimen/text_size_tiny" />

                <TextView
                    android:id="@+id/tv_scenic_spots_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/color_text_orange2"
                    android:textSize="@dimen/text_size_small" />
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_scenic_spots_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginBottom="@dimen/dp_16"
            android:paddingRight="@dimen/dp_15"
            android:lines="1"
            android:ellipsize="end"
            android:textColor="@color/color_text_black7"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold"

            />
    </LinearLayout>

    <View
        android:id="@+id/view_footer"
        android:layout_width="@dimen/dp_10"
        android:layout_height="match_parent" />
</LinearLayout>
