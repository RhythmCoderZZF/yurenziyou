<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_toLeftOf="@+id/llyt_goods_price_detail"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_mch_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_toLeftOf="@+id/llyt_price_detail"
            android:paddingRight="@dimen/dp_15"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_xsmall"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/llyt_price_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_hotel_homestay_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="right|center_vertical"
                android:text=""
                android:textColor="@color/color_text_black7"
                android:textSize="@dimen/text_size_xtiny" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:text="¥"
                android:textColor="@color/color_text_black7"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="right|center_vertical"
                android:text="0.00"
                android:textColor="@color/color_text_black7"
                android:textSize="@dimen/text_size_xnormal"
                android:textStyle="bold" />

        </LinearLayout>




    </RelativeLayout>

    <TextView
        android:id="@+id/tv_goods_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/dp_3"
        android:textColor="@color/txt_font_black2"
        android:layout_marginLeft="@dimen/dp_15"
        android:textSize="@dimen/text_size_xsmall" />

    <RelativeLayout
        android:id="@+id/llyt_goods_price_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dp_3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_ticket_can_use_time"
            android:layout_width="@dimen/dp_100"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_marginLeft="@dimen/dp_15"
            android:textColor="@color/color_text_gray28"
            android:textSize="@dimen/text_size_small" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_6"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_goods_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dp_2"
                android:text="0"
                android:textColor="@color/color_text_gray27"
                android:textSize="@dimen/text_size_xtiny" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:gravity="right|center_vertical"
                    android:text="x"
                    android:textColor="@color/color_text_gray27"
                    android:textSize="@dimen/text_size_eight" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:gravity="right|center_vertical"
                android:text="¥"
                android:textColor="@color/color_text_gray27"
                android:textSize="@dimen/text_size_tiny"
                android:layout_marginRight="@dimen/dp_2"
              />
            <TextView
                android:id="@+id/tv_unit_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_marginRight="@dimen/dp_16"
                android:gravity="right|center_vertical"
                android:text="0.00"
                android:textColor="@color/color_text_gray27"
                android:textSize="@dimen/text_size_xsmall"
              />

        </LinearLayout>



    </RelativeLayout>


</LinearLayout>
