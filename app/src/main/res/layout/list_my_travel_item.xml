<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_my_travel_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_l_grey"
    android:layout_marginBottom="@dimen/dp_21"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15">


        <com.nbhysj.coupon.view.RoundedImageView
            android:id="@+id/image_scenic_spots"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_120"
            app:riv_mutate_background="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            app:riv_corner_radius="13dip"
            app:riv_oval="false" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15">

                <TextView
                    android:id="@+id/tv_travel_assistant_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_nineteen_large"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_16"
                    android:src="@mipmap/icon_white_menu_more" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_my_travel_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_marginTop="@dimen/dp_14"
                android:gravity="center"
                android:text="4月20日-4月23日"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_48"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_32"
        android:layout_marginRight="@dimen/dp_32"
        android:background="@drawable/bg_white_radius_thirteen_bottom_shape"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_soon_travel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_17"
            android:src="@mipmap/icon_soon_travel" />

        <TextView
            android:id="@+id/tv_trip_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_toRightOf="@+id/img_soon_travel"
            android:text=""
            android:singleLine="true"
            android:layout_toLeftOf="@+id/tv_travel_assistant_tag"
            android:layout_marginRight="@dimen/dp_10"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_xsmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_travel_assistant_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/bg_blue_green_gradient_radius_nine"
            android:gravity="right"
            android:paddingLeft="@dimen/dp_13"
            android:paddingTop="@dimen/dp_2"
            android:paddingRight="@dimen/dp_13"
            android:paddingBottom="@dimen/dp_2"
            android:text="即将出行"
            android:textColor="@color/white" />
    </RelativeLayout>

</LinearLayout>
