<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llyt_zan_and_collection_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_15"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_marginBottom="@dimen/dp_6"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_user_avatar"
            android:layout_width="@dimen/dp_41"
            android:layout_height="@dimen/dp_41"
            android:layout_marginTop="@dimen/dp_16"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_13"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_toLeftOf="@+id/img_trip_question_mark"
            android:layout_toRightOf="@+id/image_user_avatar"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_medium" />

                <TextView
                    android:id="@+id/tv_user_oprate_for_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_7"
                    android:layout_marginTop="@dimen/dp_16"
                    android:text="开始关注你了"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_xnormal"
                    android:visibility="gone"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_zan_and_collection_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_8"
                android:text=""
                android:textColor="@color/text_grey"
                android:textSize="@dimen/text_size_xsmall" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rect_light_gray_shape_radius_two"
                android:layout_marginTop="@dimen/dp_5"
                android:textColor="@color/color_text_black2"
                android:textSize="@dimen/text_size_small"
                android:paddingTop="@dimen/dp_3"
                android:paddingBottom="@dimen/dp_3"
                android:paddingLeft="@dimen/dp_6"
                android:paddingRight="@dimen/dp_6"
                android:text=""/>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_post_pictrue"
            android:layout_width="@dimen/dp_42"
            android:layout_height="@dimen/dp_42"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_12"
            android:scaleType="fitXY" />
    </RelativeLayout>


    <View
        android:id="@+id/view_line"
        style="@style/line"
        android:layout_marginTop="@dimen/dp_16" />

</LinearLayout>

