<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        style="@style/line"
        android:layout_height="@dimen/dp_10"
        android:background="@color/line_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_14"
        android:layout_marginBottom="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_question_tag"
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_16"
            android:background="@drawable/bg_filleted_corner_blue_shape"
            android:gravity="center"
            android:text="问"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_small" />

        <TextView
            android:id="@+id/tv_question_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:layout_toLeftOf="@+id/tv_answer"
            android:layout_toRightOf="@+id/tv_question_tag"
            android:singleLine="true"
            android:text="隔音如何，晚上安静吗，睡觉会不会被影响吗？"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_normal" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/color_text_gray2"
        android:layout_marginLeft="@dimen/dp_15"
        android:alpha="0.25"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.nbhysj.coupon.view.GlideImageView
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_7"
            android:src="@drawable/shape_round_light_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_11"
            android:layout_marginTop="@dimen/dp_11"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="某某某"
                android:textSize="@dimen/text_size_normal"
                android:textColor="@color/txt_font_black2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="隔音好，睡觉不会被影响！"
                android:textSize="@dimen/text_size_normal"
                android:layout_marginTop="@dimen/dp_6"
                android:textColor="@color/text_grey" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_16"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看其它2个回答"
                    android:textSize="@dimen/text_size_small"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_grey" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隔音好，睡觉不会被影响！"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginTop="@dimen/dp_6"
                    android:layout_centerVertical="true"
                    android:textColor="@color/text_grey"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/dp_15" />

            </RelativeLayout>

            <TextView
                android:layout_width="@dimen/dp_73"
                android:layout_height="@dimen/dp_25"
                android:text="回答"
                android:layout_gravity="right"
                android:gravity="center"
                android:background="@drawable/bg_stroke_radius_gradient_shape"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_9"
                android:layout_marginBottom="@dimen/dp_7"
                android:textColor="@color/color_green2" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
