<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_text_gray16"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    tools:context=".ui.HotelOrderActivity">

    <View
        android:id="@+id/toolbar_space"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/bg_blue_and_green_gradient"></View>

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:layout_below="@+id/toolbar_space"
        android:background="@drawable/bg_blue_and_green_gradient">

        <ImageButton
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="@dimen/dp_15"
            android:layout_marginLeft="@dimen/dp_5"
            android:src="@mipmap/icon_left_arrow_black" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textColor="@color/color_light_black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/dp_16"
            android:text=""
            android:textColor="@color/text_grey"
            android:textSize="@dimen/text_size_xnormal" />

        <ImageView
            android:id="@+id/iv_toolbar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_16"
            android:gravity="center_vertical"
            android:src="@mipmap/icon_order_detail_up_arrow"
            android:visibility="gone" />

    </RelativeLayout>

    <com.nbhysj.coupon.view.RecyclerScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@+id/rlyt_order_submit"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/llyt_ticket_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_blue_and_green_gradient"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dp_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/bg_order_date_select_top_shape"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_hotel_goods_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:text="高级标间-豪华套餐"
                        android:textColor="@color/txt_font_black2"
                        android:textSize="@dimen/text_size_normal"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_hotel_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:text="高级标间-豪华套餐"
                        android:textColor="@color/color_text_gray24"
                        android:textSize="@dimen/text_size_small"
                       />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginRight="@dimen/dp_14"
                        android:background="@color/color_text_gray16" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_13"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:orientation="horizontal"
                            android:layout_weight="3">

                            <LinearLayout
                                android:id="@+id/llyt_check_in_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="入住时间"
                                    android:textColor="@color/color_text_gray24"
                                    android:textSize="@dimen/text_size_small" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tv_check_in_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:drawablePadding="@dimen/dp_5"
                                    android:text=""
                                    android:textColor="@color/txt_font_black2"
                                    android:textSize="@dimen/text_size_medium"
                                    android:layout_marginRight="@dimen/dp_8"
                                    android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_check_in_date_week"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawablePadding="@dimen/dp_5"
                                        android:text=""
                                        android:textColor="@color/color_text_gray24"
                                        android:textSize="@dimen/text_size_xtiny"
                                      />

                                </LinearLayout>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/llyt_leave_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_marginLeft="@dimen/dp_30"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="离店时间："
                                    android:textColor="@color/color_text_gray24"
                                    android:textSize="@dimen/text_size_small" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/tv_leave_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawablePadding="@dimen/dp_5"
                                        android:text=""
                                        android:textColor="@color/txt_font_black2"
                                        android:textSize="@dimen/text_size_medium"
                                        android:layout_marginRight="@dimen/dp_8"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:id="@+id/tv_leave_time_date_week"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:drawablePadding="@dimen/dp_5"
                                        android:text=""
                                        android:textColor="@color/color_text_gray24"
                                        android:textSize="@dimen/text_size_xtiny"
                                       />

                                </LinearLayout>

                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_differ_days_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginLeft="@dimen/dp_18"
                            android:layout_marginRight="@dimen/dp_15"
                            android:gravity="right"
                            android:layout_weight="1"
                            android:text="共1晚"
                            android:textColor="@color/txt_font_black2"
                            android:textSize="@dimen/text_size_tiny" />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/color_text_gray16" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/bg_order_date_select_bottom_shape">


                    <TextView
                        android:id="@+id/tv_reservation_cancel_rule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:layout_alignParentLeft="true"
                        android:layout_toLeftOf="@+id/tv_reservation_cancel_rule_tag"
                        android:text=""
                        android:textColor="@color/color_text_orange2"
                        android:layout_marginRight="@dimen/dp_10"
                        android:textSize="@dimen/text_size_small"
                        />

                    <TextView
                        android:id="@+id/tv_reservation_cancel_rule_tag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="@dimen/dp_16"
                        android:text="规则 >"
                        android:textColor="@color/color_orange2"
                        android:textSize="@dimen/text_size_small"
                        android:visibility="gone"/>


                </RelativeLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@color/color_text_gray16"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/bg_order_date_select_top_shape"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:text="入住信息"
                        android:textColor="@color/txt_font_black2"
                        android:textSize="@dimen/text_size_normal"
                        android:textStyle="bold" />

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:background="@color/color_text_gray16" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_44"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/white"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="房间数"
                            android:textColor="@color/txt_font_black2"
                            android:textSize="@dimen/text_size_xsmall"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerInParent="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_room_num"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="1间"
                                android:gravity="center_vertical"
                                android:textColor="@color/color_text_gray20"
                                android:textSize="@dimen/text_size_small"
                                android:layout_marginRight="@dimen/dp_10"
                                android:layout_toLeftOf="@+id/img_room_num_black_right_arrow"
                                android:background="@null"/>

                            <ImageView
                                android:id="@+id/img_room_num_black_right_arrow"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="@dimen/dp_10"
                                android:gravity="right"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:src="@mipmap/icon_right_black_arrow"
                                android:textColor="@color/txt_font_black2" />

                        </RelativeLayout>


                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/color_text_gray16" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_live_people"
                            android:layout_width="@dimen/dp_51"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="入住人"
                            android:textColor="@color/txt_font_black2"
                            android:textSize="@dimen/text_size_xsmall"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_check_in_people_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_toRightOf="@id/tv_live_people"
                            android:layout_toLeftOf="@+id/img_user_avatar_photo"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@null"
                            android:hint="填写实际入住人姓名"
                            android:maxLength="20"
                            android:textCursorDrawable="@drawable/bg_editext_custom_cursor"
                            android:textColorHighlight="@color/color_text_gray17"
                            android:textSize="@dimen/text_size_small" />

                        <ImageView
                            android:id="@+id/img_user_avatar_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_8"
                            android:gravity="right"
                            android:src="@mipmap/icon_live_people"
                            android:textColor="@color/txt_font_black2" />


                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/color_text_gray16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_46"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/white"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_live_people_phone"
                            android:layout_width="@dimen/dp_51"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/dp_15"
                            android:text="手机号"
                            android:textColor="@color/txt_font_black2"
                            android:textSize="@dimen/text_size_xsmall"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edt_check_in_people_phone"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_toRightOf="@id/tv_live_people_phone"
                            android:layout_toLeftOf="@+id/img_user_phone"
                            android:layout_marginRight="@dimen/dp_10"
                            android:background="@null"
                            android:hint="填写实际入住人手机号"
                            android:textCursorDrawable="@drawable/bg_editext_custom_cursor"
                            android:maxLength="20"
                            android:textColorHighlight="@color/color_text_gray17"
                            android:textSize="@dimen/text_size_small" />

                        <ImageView
                            android:id="@+id/img_user_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/dp_8"
                            android:gravity="right"
                            android:src="@mipmap/icon_live_people_phone"
                            android:textColor="@color/txt_font_black2" />


                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@color/color_text_gray16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:background="@drawable/bg_order_date_select_bottom_shape"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_14"
                        android:layout_marginBottom="@dimen/dp_14"
                        android:text="到店时间"
                        android:textColor="@color/txt_font_black2"
                        android:textSize="@dimen/text_size_xsmall"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/tv_arrival_hotel_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_21"
                        android:layout_marginRight="@dimen/dp_16"
                        android:text=""
                        android:textColor="@color/txt_font_black2"
                        android:textSize="@dimen/text_size_small" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_order_date_select_top_shape"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:text="更多服务"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/color_text_gray16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_order_date_select_bottom_shape"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:text="报销凭证"
                    android:textColor="@color/color_text_gray20"
                    android:textSize="@dimen/text_size_xsmall"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_reimbursement_certificate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_21"
                    android:layout_marginRight="@dimen/dp_16"
                    android:text=""
                    android:textColor="@color/color_text_gray20"
                    android:textSize="@dimen/text_size_small" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="@dimen/dp_10"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text=""
                    android:textColor="@color/txt_font_black2" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_order_date_select_top_shape"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:text="优惠"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_normal"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@color/color_text_gray16" />

            <RelativeLayout
                android:id="@+id/rlyt_coupon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:background="@drawable/bg_order_date_select_bottom_shape"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_14"
                    android:layout_marginBottom="@dimen/dp_14"
                    android:text="优惠券"
                    android:textColor="@color/color_text_gray20"
                    android:textSize="@dimen/text_size_xsmall"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
