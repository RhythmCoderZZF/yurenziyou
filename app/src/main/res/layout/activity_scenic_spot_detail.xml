                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/dp_16"
                        android:layout_marginRight="@dimen/dp_17"
                        android:src="@mipmap/icon_blue_right_arrow" />

                </RelativeLayout>

                <View
