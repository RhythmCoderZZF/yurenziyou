<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rlyt_bind_account_and_setting"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/str_account_bind_and_setting"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrow_navigation_right" />
            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_15" />

            <RelativeLayout
                android:id="@+id/rlyt_edit_personal_data"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/str_edit_personal_data"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrow_navigation_right" />
            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_15"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rlyt_push_setting"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:text="@string/str_push_setting"
                        android:textColor="@color/txt_font_black2"
                        android:textSize="@dimen/text_size_xnormal" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_1"
                        android:text="请放心，北京时间23:00-次日8:00不会推送"
                        android:textColor="@color/txt_font_black2"
                        android:textSize="@dimen/text_size_xtiny" />
                </LinearLayout>

                <com.nbhysj.coupon.widget.ToggleButton
                    android:id="@+id/btn_toggle_push"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="@dimen/dp_14"
                    toggle:tbBorderWidth="1dp"
                    toggle:tbOffBorderColor="@color/line_grey"
                    toggle:tbOffColor="@color/white"
                    toggle:tbOnColor="@color/color_green2"
                    toggle:tbSpotColor="@color/white" />
            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_15"
                android:visibility="gone"/>

            <RelativeLayout
                android:id="@+id/rlyt_privacy_setting"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/str_privacy_setting"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />

                <com.nbhysj.coupon.widget.ToggleButton
                    android:id="@+id/btn_toggle_privacy_setting"
                    android:layout_width="48dp"
                    android:layout_height="24dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="@dimen/dp_14"
                    toggle:tbBorderWidth="1dp"
                    toggle:tbOffBorderColor="@color/line_grey"
                    toggle:tbOffColor="@color/white"
                    toggle:tbOnColor="@color/color_green2"
                    toggle:tbSpotColor="@color/white" />
            </RelativeLayout>


            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_15" />

            <RelativeLayout
                android:id="@+id/rlyt_video_auto_play_settings"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/str_video_auto_play_settings"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrow_navigation_right" />
            </RelativeLayout>


            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_15" />

            <RelativeLayout
                android:id="@+id/rlyt_frequently_used_information"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/str_frequently_used_information"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrow_navigation_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlyt_common_questions_and_feedback"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/str_common_questions_and_feedback"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrow_navigation_right" />
            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_15" />

            <RelativeLayout
                android:id="@+id/rlyt_evaluate_murloc_travel"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/str_evaluate_murloc_travel"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:src="@mipmap/icon_arrow_navigation_right" />
            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_15" />

            <RelativeLayout
                android:id="@+id/rlyt_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/str_clear_cache"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />

                <TextView
                    android:id="@+id/tv_cache_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text=""
                    android:textColor="@color/txt_font_black2" />
            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_15" />

            <RelativeLayout
                android:id="@+id/rlyt_about"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:text="@string/str_about"
                    android:textColor="@color/txt_font_black2"
                    android:textSize="@dimen/text_size_xnormal" />

                <TextView
                    android:id="@+id/tv_version"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:text=""
                    android:drawableRight="@mipmap/icon_arrow_navigation_right"
                    android:textColor="@color/color_text_gray2" />
            </RelativeLayout>

            <View
                style="@style/line"
                android:layout_marginLeft="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_logout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_41"
                android:layout_below="@+id/llyt_login_input"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="@dimen/dp_16"
                android:layout_marginTop="@dimen/dp_30"
                android:layout_marginRight="@dimen/dp_16"
                android:background="@drawable/btn_oprate_bg"
                android:gravity="center"
                android:text="@string/txt_logout"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:layout_marginBottom="@dimen/dp_40" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>