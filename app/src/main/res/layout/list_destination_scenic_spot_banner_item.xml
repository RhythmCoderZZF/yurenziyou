<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_scenic_spot_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_header"
        android:layout_width="@dimen/dp_6"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="155dp"
            android:layout_height="122dp">

            <ImageView
                android:id="@+id/image_scenic_spots"
                android:layout_width="155dp"
                android:layout_height="122dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_scenic_spots_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text=""
                android:layout_above="@+id/flowlayout_scenic_spot_label"
                android:layout_marginBottom="@dimen/dp_9"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/text_size_nineteen_large"
                android:textColor="@color/white" />

            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/flowlayout_scenic_spot_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:paddingTop="@dimen/dp_2"
                android:paddingBottom="@dimen/dp_2"
                android:layout_marginBottom="@dimen/dp_12"
                zhy:max_select="-1" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:id="@+id/view_footer"
        android:layout_width="@dimen/dp_15"
        android:layout_height="match_parent" />
</LinearLayout>
