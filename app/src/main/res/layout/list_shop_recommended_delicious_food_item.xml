<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_fine_food_recommend_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:elevation="@dimen/dp_5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.nbhysj.coupon.view.RoundedImageView
            android:id="@+id/image_delicious_food"
            android:layout_width="87dp"
            android:layout_height="@dimen/dp_65"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/dp_8"
            android:layout_marginLeft="@dimen/dp_12"
            android:layout_marginRight="@dimen/dp_12"
            android:layout_gravity="center_horizontal"
            app:riv_corner_radius="@dimen/dp_5"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_delicious_food_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7"
            android:layout_marginLeft="@dimen/dp_12"
            android:text=""
            android:textColor="@color/color_text_black7"
            android:textSize="@dimen/text_size_xsmall"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_food_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="¥0.00"
                android:textColor="@color/color_orange3"
                android:textSize="@dimen/text_size_small" />

            <TextView
                android:id="@+id/tv_food_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="评分0.0"
                android:textColor="@color/color_text_gray24"
                android:textSize="@dimen/text_size_tiny" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
