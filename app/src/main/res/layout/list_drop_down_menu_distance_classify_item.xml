<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    xmlns:zhy="http://schemas.android.com/tools"
    android:id="@+id/llyt_distance_classify_item"
    android:layout_width="match_parent"
    android:layout_height="46dp"
    android:background="@color/color_text_gray16"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_distance_classify"
        android:layout_width="3dp"
        android:layout_height="18dp"
        android:background="@drawable/bg_blue_green_gradient_radius_two"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_position_distance_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="距离"
        android:textColor="@color/txt_font_black2"
        android:textSize="@dimen/text_size_xsmall"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_gravity="center_vertical" />


</LinearLayout>

