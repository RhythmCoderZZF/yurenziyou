<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_my_order_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/bg_white_radius_shape"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="horizontal">

            <com.nbhysj.coupon.view.GlideImageView
                android:id="@+id/img_hotel_photo"
                android:layout_width="@dimen/dp_81"
                android:layout_height="@dimen/dp_81"
                android:layout_marginTop="@dimen/dp_4"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/img_hotel_photo"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_11"
                    android:text="宁波海大酒店"
                    android:textColor="@color/color_text_black2"
                    android:textSize="@dimen/text_size_medium" />

                <com.nbhysj.coupon.view.StarBarView
                    android:id="@+id/starbar"
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginLeft="@dimen/dp_13"
                    android:layout_marginTop="@dimen/dp_8"
                    android:clickable="false"
                    android:focusable="false"
                    ratingbar:starCount="5"
                    ratingbar:starDistance="5dp"
                    ratingbar:starEmpty="@mipmap/icon_flower_gray"
                    ratingbar:starFill="@mipmap/icon_flower_orange"
                    ratingbar:starSize="13dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_9"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_identification_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_13"
                        android:text="宁波海大酒店"
                        android:textColor="@color/color_text_gray11"
                        android:textSize="@dimen/text_size_small" />

                    <View
                        android:layout_width="@dimen/dp_1"
                        android:layout_height="@dimen/dp_11"
                        android:layout_marginLeft="@dimen/dp_7"
                        android:layout_marginRight="@dimen/dp_7"
                        android:background="@color/color_text_gray14" />

                    <TextView
                        android:id="@+id/tv_hotel_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="经济型"
                        android:textColor="@color/color_text_gray11"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_14"
                        android:layout_marginBottom="@dimen/dp_11"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/dp_13"
                            android:text="￥"
                            android:textColor="@color/color_text_orange2"
                            android:textSize="@dimen/text_size_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="156"
                            android:textColor="@color/color_text_orange2"
                            android:textSize="@dimen/text_size_xxlarge" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tv_ammount"
                            android:layout_marginLeft="@dimen/dp_3"
                            android:text="起"
                            android:textColor="@color/text_grey"
                            android:textSize="@dimen/text_size_small" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_location_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:text="距离酒店3km"
                        android:textColor="@color/text_grey"
                        android:textSize="@dimen/text_size_small" />
                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>


        <View
            style="@style/line"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginRight="@dimen/dp_15"
            android:background="@color/line_bg"></View>


    </LinearLayout>
</LinearLayout>
