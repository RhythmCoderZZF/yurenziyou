<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_51"
    android:layout_marginRight="@dimen/dp_50"
    android:background="@android:color/transparent"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/dialog_bg_round_white"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:id="@+id/rlyt_male"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_gender_options_male">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="男生"
                android:textColor="@color/txt_font_black2"
                android:textSize="17sp" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rlyt_female"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_51"
            android:layout_weight="1"
            android:background="@drawable/bg_btn_gender_options_female">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="女生"
                android:textColor="@color/white"
                android:textSize="17sp" />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>