<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_hotel_nearby_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dp_10"
    android:background="@color/white"
    android:orientation="horizontal">

    <View
        android:id="@+id/view_header"
        android:layout_width="@dimen/dp_10"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.nbhysj.coupon.view.RoundedImageView
            android:id="@+id/image_delicious_food"
            android:layout_width="168dp"
            android:layout_height="125dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            app:riv_mutate_background="true"
            app:riv_corner_radius="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/tv_food_mch_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_7"
            android:text=""
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_normal"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_16"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:text="¥"
                android:textColor="@color/color_text_orange2"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_per_capita_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/color_text_orange2"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/人"
                android:textColor="@color/color_text_gray20"
                android:textSize="@dimen/text_size_xtiny" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/view_footer"
        android:layout_width="@dimen/dp_15"
        android:layout_height="match_parent" />
</LinearLayout>
