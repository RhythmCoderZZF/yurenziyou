<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llyt_homestay_resources_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <com.nbhysj.coupon.view.RoundedImageView
        android:id="@+id/image_homestay"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        app:riv_mutate_background="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:scaleType="fitXY"
        app:riv_corner_radius="5dip"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/tv_homestay_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text=""
        android:lines="1"
        android:ellipsize="end"
        android:textColor="@color/color_text_black7"
        android:textStyle="bold"
        android:textSize="@dimen/text_size_normal" />

    <TextView
        android:id="@+id/tv_homestay_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_3"
        android:text=""
        android:textColor="@color/color_text_black7"
        android:textSize="@dimen/text_size_tiny" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_marginBottom="@dimen/dp_10"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¥"
            android:textColor="@color/color_text_orange2"
            android:layout_marginRight="@dimen/dp_2"
            android:textSize="@dimen/text_size_xmedium" />

        <TextView
            android:id="@+id/tv_market_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textColor="@color/color_orange3"
            android:textSize="@dimen/text_size_xmedium" />

        <TextView
            android:id="@+id/tv_default_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_4"
            android:text="¥0"
            android:textColor="@color/txt_font_black2"
            android:textSize="@dimen/text_size_tiny" />
    </LinearLayout>


</LinearLayout>
